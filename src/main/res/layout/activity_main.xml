<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
     >

<MultiAutoCompleteTextView
android:id="@+id/auto"
android:completionThreshold="1"
android:textCursorDrawable="@drawable/cursorcholo"
android:maxLength="26"
android:hint="@string/escribe"
android:layout_width="400sp"
android:layout_height="wrap_content" android:focusable="true"
    android:textColorHint="@color/verde"
    android:background="@color/negro"
    android:textColor="@color/verde"
    android:textSize="@dimen/tamanoletras"

    />

<Button
    android:id="@+id/botonaso"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/auto"
    android:text="="/>

<TextView

android:text="@string/respuestas"
android:id="@+id/resultado"
android:layout_width="400sp"
android:layout_height="wrap_content"
android:layout_below="@+id/auto"
    android:background="@color/negro"
    android:textColor="@color/blanco"
    android:textSize="@dimen/tamanoletras"/>

    <ListView
        android:id="@+id/list2"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="List"
        android:layout_below="@id/resultado"
        android:background="@color/negro"
        android:textColor="@color/blanco"
        android:textSize="@dimen/tamanoletras"
        />

    <ListView
        android:id="@+id/list"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="List"
        android:layout_below="@id/resultado"
        android:layout_toRightOf="@id/list2"
        android:background="@color/negro"
        android:textColor="@color/blanco"
        android:textSize="@dimen/tamanoletras"
        />



</RelativeLayout>
